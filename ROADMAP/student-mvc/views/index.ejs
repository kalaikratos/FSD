<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Management System</title>
</head>

<body>
  <h1>Student List</h1>
  <ul>
    <% students.forEach(student=> {%>
      <li>
        <%= student.name %> - <%= student.age %> years old - Grade: <%= student.grade %>
              <form method="POST" action="/students/<%= student._id %>?_method=DELETE">
                <button type="submit">Delete</button>
              </form>
              <!-- <a href="/students/<%= student._id %>/edit">Edit</a> -->
      </li>
      <% }); %>
  </ul>
  <h2>Add New Student</h2>
  <form method="POST" action="/students">
    <input type="text" name="name" placeholder="Name" required />
    <input type="number" name="age" placeholder="Age" required />
    <input type="text" name="grade" placeholder="Grade" required />
    <button type="submit">Add Student</button>
  </form>

  
<h2>Student with Courses</h2>
<ul>
  <% students.forEach(student=> {%>
    <li>
      <%= student.name %> - <%= student.age %> years old - Grade: <%= student.grade %> - Course: <%= student.course ? student.course.name : 'N/A' %>
    </li>
  <% }); %>
</ul>

<h2>Student with Mentors</h2>
<ul>
  <% students.forEach(student=> {%>
    <li>
      <%= student.name %> - <%= student.age %> years old - Grade: <%= student.grade %> - Mentor: <%= student.mentor ? student.mentor.name : 'N/A' %>
    </li>
  <% }); %>
</ul>

<h2>Student with Mentors and Courses</h2>
<ul>
  <% students.forEach(student=> {%>
    <li>
      <%= student.name %> - <%= student.age %> years old - Grade: <%= student.grade %> - Mentor: <%= student.mentor ? student.mentor.name : 'N/A' %> - Course: <%= student.course ? student.course.name : 'N/A' %>
    </li>
  <% }); %>

</ul>
<h2>Students without Mentors</h2>
<ul>
  <% students.forEach(student=> {%>
    <li>
      <%= student.name %> - <%= student.age %> years old - Grade: <%= student.grade %> - Mentor: <%= student.mentor ? student.mentor.name : 'N/A' %> - Course: <%= student.course ? student.course.name : 'N/A' %>
    </li>
  <% }); %>
</ul>
  

 





</body>

</html>